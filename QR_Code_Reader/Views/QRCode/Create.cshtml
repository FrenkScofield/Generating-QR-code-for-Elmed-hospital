@model QR_Code_Reader.Models.BLL.UserCovidTest
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12 my-4">
        <div class="card shadow my-4">
            <div class="card-header py-4">
                QR Kod   Əlavə et <a asp-action="Index" class="float-right btn btn-outline-secondary">Geri Dön</a>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.Name" class="control-label"></label>
                                <input type="text" asp-for="@Model.Name" id="Name" class="form-control" />
                                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Surname" class="control-label"></label>
                                <textarea asp-for="@Model.Surname" id="Name" class="form-control" style="height: 140px;"></textarea>
                                <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.BirthDay" class="control-label">Date of production</label>
                                <input type="date" asp-for="@Model.BirthDay" id="datetimepicker" value="2021-04-08" class="form-control" />
                                <span asp-validation-for="@Model.BirthDay" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.CovidCode" class="control-label"></label>
                                <input type="text" asp-for="@Model.CovidCode" id="Name" class="form-control" />
                                <span asp-validation-for="@Model.CovidCode" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Əlavə et" id="btnAddModels" class="btn btn-success name" />
                    </div>
                </form>

                @if (ViewBag.QRCode != null)
                {
                    <img src="@ViewBag.QRCode" style="width:300px; height:300px;" alt="QR Code" />
                    @*<img src="@(TempData["qrInfo"])" style="width:300px; height:300px;" alt="QR Code" />*@

                }

            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $('#datetimepicker').datetimepicker({

            language: 'en-US',
            format: 'dd-MM-yyyy'

        });
    </script>

}



