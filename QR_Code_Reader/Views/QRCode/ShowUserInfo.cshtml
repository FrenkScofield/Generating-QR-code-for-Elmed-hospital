@model QR_Code_Reader.Models.BLL.UserCovidTest
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <img style=" margin-left: 340px; margin-top: 20px; margin-bottom: 40px; width: 20%" src="~/img/images.png"  alt="Elmed LOGO" />
                </div>
            </div>
        </div>
    </section>
    <section class="address">
        <div class="container">
            <div class="row">
                <div class="col-4">
                    Azərbaycan.Bakı şəh,Binəqədi rn.,<br/>
                    9-cu mkr.,Mir Cəlal küç.51C <br/>
                    e-mail; <a href="#">elmedtibbmerkezi@gmail.com</a>
                </div>
                <div class="col-4"></div>
                <div class="col-4">
                    Tel : (+99412) 431 44 77 <br/>
                    Faks : (+99412) 431 13 77 <br/>
                    Mob : (+99477) 303 41 14
                </div>
            </div>
        </div>
    </section>
    <section class="user-result-page">
        <div class="container">
            <h2 style=" text-align: center; font-family: serif; font-weight: 700; font-size: 37px; line-height: 3; margin-top: 70px;">LABORATOR NƏTİCƏLƏR</h2>
            <div class="row">
                <div class="col-12">
                    <p style="line-height: 2; float: right; font-size: 30px; font-weight: 700; font-family: revert;">N @Model.Id</p>
                </div>
                <div class="col-1">
                    <p style="-webkit-transform: rotate( 270deg ); width: 172px; margin-top: 131px; font-size: 16px; font-family: sans-serif; font-weight: 600; padding-bottom: 18px;">
                        Xəstənin Məlumatları
                    </p>
                </div>
                <div class="col-5" style="margin-top: 70px;">

                    <div style=" font-weight: 700; font-size: 21px;">
                        <p>Adı, Soyadı  : <span style="font-weight: 400;">@Model.NameSurname .</span></p>
                        <p>Ata Adı : <span style="font-weight: 400;">@Model.FhaterName .</span></p>
                        <div style="display:flex">
                            <p>Yaş : <span style="font-weight: 400;">@Model.Age .</span>  </p>
                            <p>Cinsiyyət : <span style="font-weight: 400;">@Model.Sex .</span>  </p>
                        </div>
                        <p>Şöbə  : <span style="font-weight: 400;">@Model.Department .</span></p>
                    </div>

                </div>
                <div class="col-6" style="margin-top: 70px;">
                    <div style=" font-weight: 700; font-size: 21px;">
                        <p>İstək zamanı  : <span style="font-weight: 400;">@Model.OnRequest .</span></p>
                        <p>Nəticənin çıxma vaxtı  : <span style="font-weight: 400;">@Model.TimeOfIssue .</span></p>
                        <p>Təsdiq zamanı  : <span style="font-weight: 400;">@Model.AtTheTimeOfApproval .</span>  </p>
                        <p>Həkim  : <span style="font-weight: 400;">@Model.Doctor .</span></p>
                    </div>
                  
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                <table class="table table-bordered" style=" margin-top: 130px; border: 2px solid;">
                    <thead>
                        <tr style="height: 80px; text-align: center; background-color: #d6d6d6; font-size: 26px;">
                            <th scope="col" style="border: 2px solid;">Göstəricilər</th>
                            <th scope="col" style="border: 2px solid;">Nəticə</th>
                            <th scope="col" style="border: 2px solid;">Norma</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style=" border: 2px solid; text-align: center; font-size: 22px; font-weight: 500; font-family: emoji;">@Model.Indicators</td>
                            <td style=" border: 2px solid; text-align: center; font-size: 22px; font-weight: 500; font-family: emoji;">@Model.Result</td>
                            <td style=" border: 2px solid; text-align: center; font-size: 22px; font-weight: 500; font-family: emoji;">@Model.Norm</td>


                        </tr>
                       
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-6" style="margin-top:100px">
                    <p style=" font-size: 17px; font-weight: 700;">Həkim/Laborant :</p>
                    <p style=" margin-top: 50px;">
                        Məmmədova G. _________
                    </p>
                </div>
                <div class="col-6" style="margin-top:100px">
                    @if (ViewBag.QRCode != null)
                    {
                        <img src="@ViewBag.QRCode" style="width:200px; height:200px; float:right;" alt="QR Code" />

                    }
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
